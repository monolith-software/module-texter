{% extends '@CMS/Admin/module.html.twig' %}

{% block title %}{{ 'Texter'|trans }} / {{ parent() }}{% endblock %}

{% block page_header 'Texter'|trans %}
{% block page_description 'Module'|trans %}

{% block content %}
<div class="box box-primary">
    <div class="box-header with-border">

    <div class="tab-content">
        <div class="tab-pane active" id="all">
            <table class="table table-bordered table-hover">
                <thead>
                <tr>
                    <th>id</th>
                    <th>{{ 'Text'|trans }}</th>
                    <th>{{ 'Folder'|trans }}</th>
                    <th>{{ 'Action'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for item in items %}
                    <tr>
                        <td><a href="{{ path('monolith_module.texter.admin.edit',    {'id': item.id}) }}">{{ item.id }}</a></td>
                        <td><a href="{{ path('monolith_module.texter.admin.edit',    {'id': item.id}) }}">{{ item.announce }}</a></td>
                        <td>{% if item._folderPath %}
                                <small>
                                    <a href="{{ item._folderPath }}" title="Перейти на сайт в раздел: {{ item._folderPath }}">{{ item._folder.title }}</a>
                                </small>
                            {% else %}
                                <span class="label label-danger label-important" title="Этот текст нигде не используется">{{ 'No'|trans }}</span>
                            {% endif %}
                        </td>
                        <td>
                            {% if item.history.count > 0 %}
                                <a href="{{ path('monolith_module.texter.admin.history', {'id': item.id}) }}" title="История"><i class="icon-time"></i><span class="glyphicon glyphicon-time" aria-hidden="true"></span></a>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    </div>
</div>
{% endblock content %}
